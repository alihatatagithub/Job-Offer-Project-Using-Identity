<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />

</head>
<body style="background-image:url(../../Content/Images/Tower.jpg);background-size:cover;">
    <div class="navbar navbar-inverse navbar-fixed-top ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("Show All Jobs", "Index", "Job", new { area = "" }, new { @class = "navbar-brand", @id = "hi" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="~/Dashboard/Category">Categorie</a></li>
                    @*<li>@Html.ActionLink("Categories", "Index", "Categories",new { area="Admin"})</li>
        <li>@Html.ActionLink("Roles", "index", "appRoles",new {area = "Admin" })</li>*@


                    <li>
                        @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                        {
                            <input type="text" name="searchName" id="searchName"
                                 placeholder="Search Here..." />

                        }


                    </li>
                    <li><a href="/Home/Index" class="glyphicon glyphicon-home">Home</a></li>


                    @*<li>@Html.ActionLink("Home", "Index", "Home", new { @class = "glyphicon glyphicon-home" })</li>*@
                    <li><a href="/Home/About" class="glyphicon glyphicon-info-sign">About</a></li>
                    @*<li>@Html.ActionLink("About", "About", "Home", new { @class = "glyphicon glyphicon-info-sign" })</li>*@

                    <li><a href="/Home/Contact" class="glyphicon glyphicon-envelope">Contact</a></li>

                    @*<li>@Html.ActionLink("Contact", "Contact", "Home", new { @class = "glyphicon glyphicon-envelope" })</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

        <footer class="myfooter">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h3>
                            <i class="glyphicon glyphicon-question-sign"></i>
                            Who We Are ?
                        </h3>
                        <p>
                            This Is A great WebSite For Seeker To Job And Publisher

                        </p>
                    </div>

                    <div class="col-md-4">
                        <h3>
                            <i class="glyphicon glyphicon-globe"></i>
                            Important Links
                        </h3>
                        <ul>
                            <li><a href="#">Public Jobs</a></li>
                            <li><a href="#">Government Jobs</a></li>
                            <li><a href="#">Jobs outside the country</a></li>
                            <li><a href="#">Different Type Of Jobs</a></li>
                        </ul>
                    </div>

                    <div class="col-md-4">
                        <h3>
                            <i class="glyphicon glyphicon-envelope"></i>
                            Contact With Us
                        </h3>
                        <ul>
                            <li><a href="#">Our Page In FaceBook</a></li>
                            <li><a href="#">Our Page In Twitter </a></li>
                            <li><a href="#">Our Link In GitHib</a></li>
                            <li><a href="#">Our Channel  In YouTube  </a></li>
                        </ul>
                    </div>
                </div>

            </div>
            <div class="subfooter">
                <span>All CopyRight Is Saved By Publisher &copy; @DateTime.Now.Year </span>
            </div>
        </footer>


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
